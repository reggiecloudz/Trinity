@model DiscussionGroup

@{
    ViewData["Title"] = $"{Model.Name} Details";
}

<partial name="_NavBar" />

<main>
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3">
                <partial name="Members/_MemberNav" />
            </div>

            <div class="col-lg-9 vstack gap-4">
                @await Html.PartialAsync("DiscussionGroups/_DiscussionsTabs", Model)
            </div>
        </div>
    </div>
</main>

<vc:save-topic></vc:save-topic>
<vc:save-post></vc:save-post>

@section Scripts {
    <script src="~/lib/tinymce/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#Body',
            height: 250,
            promotion: false,
            menubar: false,
            plugins: [
                'advlist', 'autolink', 'link', 'image', 'lists', 'preview', 'anchor', 'pagebreak',
                'searchreplace', 'wordcount', 'code', 'fullscreen', 'insertdatetime',
                'media', 'table'
            ],
            toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | ' +
              'bullist numlist outdent indent | link image | print preview media fullscreen | ',
            images_upload_url: '/Editor/TinyMceUpload'
        });
    </script>
}