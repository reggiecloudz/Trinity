@model PositionDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Position!.Title} Details";
}

<partial name="_NavBar" />

<main>
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3">
                @await Html.PartialAsync("Projects/_ProjectNav", Model.Project)
            </div>

            <div class="col-lg-9 vstack gap-4">
                @await Html.PartialAsync("Positions/_PositionTabs", Model.Position)
            </div>
        </div>
    </div>
</main>