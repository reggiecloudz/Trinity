@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
  
<!-- Page Title -->
<div class="bg-light py-4 mb-4 mb-lg-10">
    <div class="container d-lg-flex justify-content-between align-items-center py-2 py-lg-4">
        <div class="pe-lg-4 text-center text-lg-start">
            <h1 class="h3 mb-0">Roles</h1>
        </div>
        <div class="pt-2 pt-lg-0">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb flex-lg-nowrap justify-content-center justify-content-lg-start">
                    <li class="breadcrumb-item">
                        <a class="text-nowrap" asp-controller="Home" asp-action="Index">
                            <i class="ri-store-2-line"></i>
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item text-nowrap active" aria-current="page">Roles</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Title -->
  
<!-- Roles List -->
<div class="container my-4">
    <div class="border border-gray-200 rounded-3 mb-10">
        <ul class="nav nav-tabs mb-0"role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" aria-current="page" asp-action="Index">Roles</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" aria-current="page" asp-action="Create">Create New</a>
            </li>
        </ul>

        <div class="p-5 p-md-8">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="add-product-tab" role="tabpanel">
                    <table class="table table-sm table-borderless">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                @* <td i-role="@role.Id"></td> *@
                                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Roles List -->
