@model ChatRoomUpdateModel

<div class="modal fade" id="editChatRoomModal-@Model.ChatId" tabindex="-1" aria-labelledby="editChatRoomLabel-@Model.ChatId"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editChatRoomLabel-@Model.ChatId">Save Chat Room</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="chat-room-update-form" method="post" asp-controller="Messenging" asp-action="UpdateRoom" asp-route-id="@Model.ChatId">
                    <div class="form-group mb-3">
                        <label for="Name" class="control-label">Name</label>
                        <input name="Name" class="form-control" value="@Model.Name" />
                    </div>
                    
                    @foreach (var item in Model.Connections)
                    {
                        <div class="form-check form-check-inline">
                            <input 
                                class="form-check-input" 
                                type="checkbox" 
                                name="SelectedUsers"
                                @(Html.Raw(item.IsChecked ? "checked=\"checked\"" : ""))
                                value="@item.Value" />
                            <label class="form-check-label" for="selectedUsers">
                                <img class="avatar-xs rounded-circle mx-1" src="~/@item.UserPhoto" alt="">
                                @item.Text
                            </label>
                        </div>
                    }
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="chat-room-update-form" class="btn btn-primary">Save now</button>
                <button type="button" class="btn btn-cta-soft me-2" data-bs-dismiss="modal"> Cancel</button>
            </div>
        </div>
    </div>
</div>