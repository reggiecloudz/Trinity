@model Applicant

<div class="modal fade" id="saveApplicantModal" tabindex="-1" aria-labelledby="saveApplicantLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveApplicantLabel">Save Applicant</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="applicant-form" method="post" asp-controller="Applicants" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="About" class="control-label"></label>
                        <textarea asp-for="About" class="form-control"></textarea>
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="PositionId" class ="form-control" value="@ViewBag.PositionId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="applicant-form" class="btn btn-primary">Save now</button>
                <button type="button" class="btn btn-cta-soft me-2" data-bs-dismiss="modal"> Cancel</button>
            </div>
        </div>
    </div>
</div>