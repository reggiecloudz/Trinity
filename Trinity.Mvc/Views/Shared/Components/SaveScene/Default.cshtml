@model Scene

<div class="modal fade" id="saveSceneModal" tabindex="-1" aria-labelledby="saveSceneLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveSceneLabel">Save Scene</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="scene-form" method="post" asp-controller="Projects" asp-action="Create" novalidate enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PhotoUpload" class="control-label"></label>
                        <input asp-for="PhotoUpload" class="form-control" type="file" />
                        <span asp-validation-for="PhotoUpload" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="JourneyId" class ="form-control" value="@ViewBag.JourneyId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="scene-form" class="btn btn-primary">Save now</button>
                <button type="button" class="btn btn-cta-soft me-2" data-bs-dismiss="modal"> Cancel</button>
            </div>
        </div>
    </div>
</div>