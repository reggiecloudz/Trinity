@model IEnumerable<ApplicationUser>

@foreach (var item in Model)
{
    <div class="d-md-flex align-items-center mb-4">
        <!-- Avatar -->
        <div class="avatar me-3 mb-3 mb-md-0">
            <a href="#!"> <img class="avatar-img rounded-circle" src="~/media/members/@item.ProfileImage" alt="">
            </a>
        </div>
        <!-- Info -->
        <div class="w-100">
            <div class="d-sm-flex align-items-start">
                <h6 class="mb-0"><a href="#!">@item.FullName </a></h6>
                <p class="small ms-sm-2 mb-0">@item.UserName</p>
            </div>
        </div>
        <!-- Button -->
        <div class="ms-md-auto d-flex">
            <button class="btn btn-danger-soft btn-sm mb-0 me-2"> Remove </button>
            <button class="btn btn-primary-soft btn-sm mb-0"> Message </button>
        </div>
    </div>
}

