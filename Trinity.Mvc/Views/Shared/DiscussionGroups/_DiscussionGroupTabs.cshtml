@model DiscussionGroup

<div class="card h-100">
    <div class="card-header d-sm-flex align-items-center text-center justify-content-sm-between border-0 pb-0">
        <h1 class="h4 card-title">@Model.Name</h1>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a class="btn btn-complementary-soft" href="#"> 
                <i class="fa-solid fa-compass"></i>
            </a>
            <button type="button" class="btn btn-complementary-soft" data-bs-toggle="modal" data-bs-target="#sendInvitationModal">
                <i class="fa-solid fa-paper-plane"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs nav-bottom-line justify-content-center justify-content-md-start">
            <li class="nav-item"> <a class="nav-link active" data-bs-toggle="tab" href="#tab-1"> Post </a> </li>
            <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#tab-2"> Discussions </a> </li>
            <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#tab-3"> Stats </a> </li>
            <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#tab-3"> Settings </a> </li>
        </ul>

        <div class="tab-content mb-0 pb-0">
            <div class="tab-pane fade show active" id="tab-1">
                <vc:save-post></vc:save-post>
            </div>
            <div class="tab-pane fade" id="tab-2">
                @await Component.InvokeAsync("AuthorPosts", new { authorId = User.FindFirst("UserId")!.Value })
            </div>
            <div class="tab-pane fade" id="tab-3">
                ...
            </div>
            <div class="tab-pane fade" id="tab-4">
                ...
            </div>
        </div>
    </div>
</div>