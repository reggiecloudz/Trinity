@model DiscussionGroup

<!-- Advanced filter responsive toggler START -->
<div class="d-flex align-items-center d-lg-none">
    <button class="border-0 bg-transparent" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSideNavbar" aria-controls="offcanvasSideNavbar">
        <span class="btn btn-primary"><i class="fa-solid fa-sliders-h"></i></span>
        <span class="h6 mb-0 fw-bold d-lg-none ms-2">Menu</span>
    </button>
</div>
<!-- Advanced filter responsive toggler END -->

<nav class="navbar navbar-expand-lg mx-0 sticky-lg-top"> 
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSideNavbar">
        <!-- Offcanvas header -->
        <div class="offcanvas-header">
            <button type="button" class="btn-close text-reset ms-auto" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body d-block px-2 px-lg-0">
            <div class="card overflow-hidden">
                <div class="h-100px cover-gradient"></div>
                    <div class="card-body pt-0">
                        <div class="text-center">
                        <div class="avatar avatar-xxl mt-n5 mb-3">
                            <a href="#!">
                                <img class="avatar-img rounded-circle border border-white border-3" src="~/media/members/@(User.FindFirst("ProfileImage")!.Value)" alt="">
                            </a>
                        </div>

                        <h5 class="mb-0"> <a href="#"> @Model.Name</a> </h5>
                        <small>@Model.Created.ToString("MMM dd, yyyy")</small>
                        <p class="mt-3">Moderator: @Model.Moderator!.FullName</p>

                        <!-- User stat START -->
                        <div class="hstack gap-2 gap-xl-3 justify-content-center">
                            <!-- User stat item -->
                            <div>
                                <h6 class="mb-0">@Model.Posts.Count()</h6>
                                <small>Post</small>
                            </div>
                            <!-- Divider -->
                            <div class="vr"></div>
                            <!-- User stat item -->
                            <div>
                                <h6 class="mb-0">@Model.Subscribers.Count()</h6>
                                <small>Subscribers</small>
                            </div>
                            <!-- Divider -->
                            <div class="vr"></div>
                            <!-- User stat item -->
                            <div>
                                <h6 class="mb-0">@Model.Posts.Sum(p => p.Likes.Count())</h6>
                                <small>Likes</small>
                            </div>
                        </div>
                        <!-- User stat END -->
                    </div>
                </div>
            </div>

            <ul class="nav small mt-4 justify-content-center lh-1">
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Settings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" target="_blank" href="#">Support </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" target="_blank" href="#">Docs </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Help</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Privacy & terms</a>
                </li>
            </ul>
            <p class="small text-center mt-1">Â©2023 <a class="text-body" target="_blank" href="#"> Noah Community Action Network</a></p>
        </div>
    </div>
</nav>