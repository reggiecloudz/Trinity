@model IEnumerable<Expenditure>

<div class="card">

    <div class="card-header border-0 pb-0">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <div>
                    <div class="nav nav-divider">
                        <h4 class="nav-item card-title mb-0"> 
                            Expenses
                        </h4>
                    </div>
                </div>
            </div>
            <!-- Card feed action dropdown START -->
            <div>
                <p class="lead">Needs: $@Model.Sum(x => x.Cost)</p>
            </div>
            <!-- Card feed action dropdown END -->
        </div>
    </div>

    <div class="card-body">
        <!-- Faq accordion -->
        <div class="accordion accordion-icon" id="accordion-expenses">
            @foreach (var item in Model)
            {
                <div class="accordion-item mb-3">
                    <div class="accordion-header" id="expense-@item.Id">
                        <button class="accordion-button pe-5 flex-wrap fw-bold" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse-@item.Id" aria-expanded="false" aria-controls="collapse-@item.Id">
                            @item.Item
                        </button>
                    </div>
                    <div id="collapse-@item.Id" class="accordion-collapse collapse" aria-labelledby="expense-@item.Id"
                        data-bs-parent="#accordion-expenses">
                        <div class="accordion-body">
                            <p>@item.Purpose</p>
                            <p>$@item.Cost</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>