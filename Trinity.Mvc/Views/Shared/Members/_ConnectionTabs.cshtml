<div class="card h-100">
    <div class="card-header d-sm-flex align-items-center text-center justify-content-sm-between border-0 pb-0">
        <h1 class="h4 card-title">Connections</h1>
        <a class="btn btn-complementary-soft" href="#">
            <i class="fa-solid fa-compass pe-1"></i> All Members
        </a>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs nav-bottom-line justify-content-center justify-content-md-start">
            <li class="nav-item"> <a class="nav-link active" data-bs-toggle="tab" href="#tab-1"> Connections </a> </li>
            <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#tab-2"> Requests </a> </li>
            <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#tab-3"> Recommendations </a> </li>
        </ul>

        <div class="tab-content mb-0 pb-0">
            <div class="tab-pane fade show active" id="tab-1">
               @await Component.InvokeAsync("UserConnections")
            </div>
            <div class="tab-pane fade" id="tab-2">
                @await Component.InvokeAsync("ConnectionRequests")
            </div>
            <div class="tab-pane fade" id="tab-3">
                @await Component.InvokeAsync("RecommendedUsers")
            </div>
        </div>
    </div>
</div>