<div class="modal fade" id="saveChatRoomModal" tabindex="-1" aria-labelledby="saveChatRoomLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveChatRoomLabel">Save Chat Room</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="chat-room-form" method="post" asp-controller="Messenging" asp-action="CreateRoom">
                    <div class="form-group mb-3">
                        <label for="name" class="control-label">Name</label>
                        <input name="name" class="form-control" />
                    </div>
                    @{
                        List<SelectableConnection> users = ViewBag.Connections;
                    }
                    @foreach (var user in users)
                    {
                        <div class="form-check form-check-inline">
                            <input 
                                class="form-check-input" 
                                type="checkbox" 
                                name="selectedUsers"
                                @(Html.Raw(user.IsChecked ? "checked=\"checked\"" : ""))
                                value="@user.Value" />
                            <label class="form-check-label" for="selectedUsers">
                                <img class="avatar-xs rounded-circle mx-1" src="~/@user.UserPhoto" alt="">
                                @user.Text
                            </label>
                        </div>
                    }
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="chat-room-form" class="btn btn-primary">Save now</button>
                <button type="button" class="btn btn-cta-soft me-2" data-bs-dismiss="modal"> Cancel</button>
            </div>
        </div>
    </div>
</div>