@model Project

<div class="card">
    <!-- Cover image -->
    <div class="h-200px rounded-top"
        style="background-image:url(/media/projects/@Model.Photo); background-position: center; background-size: cover; background-repeat: no-repeat;">
    </div>
    <!-- Card body START -->
    <div class="card-body py-0">
        <div class="d-sm-flex align-items-start text-center text-sm-start">
            <div>
                <!-- Avatar -->
                <div class="avatar avatar-xxl mt-n5 mb-3">
                    <a href="#">
                        <img class="avatar-img rounded-circle border border-white border-3" src="~/media/members/@(Model.Manager!.AvatarImage)" alt="">
                    </a>
                </div>
            </div>
            <div class="ms-sm-4 mt-sm-3">
                <!-- Info -->
                <h1 class="mb-0 h5">@Model.Name <i class="bi bi-patch-check-fill text-success small"></i></h1>
                <small>
                   <i class="fa-solid fa-user-tie me-1"></i> @Model.Manager.FullName
                </small>
            </div>
            <!-- Button -->
            <div class="d-flex mt-3 justify-content-center ms-sm-auto">
                
                <a class="btn btn-complementary-soft me-2" href="#"> 
                    <i class="bi bi-heart-fill pe-1"></i>
                    Support
                </a>

                <div class="dropdown">
                    <!-- Card share action menu -->
                    <button class="icon-md btn btn-complementary-soft" type="button" id="profileAction2" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <!-- Card share action dropdown menu -->
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileAction2">
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-envelope-paper-heart fa-fw pe-2"></i>
                                Share project in a message
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-file-earmark-pdf fa-fw pe-2"></i>
                                Save project to PDF
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-flag fa-fw pe-2"></i>
                                Report
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- List profile -->
        <ul class="list-inline mb-0 text-center text-sm-start mt-3 mt-sm-0">
            <li class="list-inline-item">
                <i class="fa-solid fa-heart me-1"></i> @Model.Cause!.Name
            </li>
            <li class="list-inline-item">
                <i class="fa-solid fa-map-location-dot me-1"></i> New Hampshire
            </li>
            <li class="list-inline-item">
                <i class="fa-solid fa-calendar-plus me-1"></i> Started on @Model.Created.ToString("MMM d, yyyy")
            </li>
        </ul>
    </div>
    <!-- Card body END -->
    <div class="card-footer mt-3 pt-2 pb-0">
        <!-- Nav profile pages -->
        <ul
            class="nav nav-bottom-line align-items-center justify-content-center justify-content-md-start mb-0 border-0">
            <li class="nav-item">
                <a class="nav-link @Html.ActiveClass("Endeavors", "Profile")" asp-controller="Endeavors" asp-action="Profile" asp-route-slug="@Model.Slug">
                    About
                </a>
            </li>
            <li class="nav-item"> 
                <a class="nav-link @Html.ActiveClass("Endeavors", "Expenditures")" asp-controller="Endeavors" asp-action="Expenditures" asp-route-slug="@Model.Slug">
                    Expenditures
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @Html.ActiveClass("Endeavors", "Positions")" asp-controller="Endeavors" asp-action="Positions" asp-route-slug="@Model.Slug">
                    Positions
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @Html.ActiveClass("Endeavors", "Events")" asp-controller="Endeavors" asp-action="Events" asp-route-slug="@Model.Slug">
                    Events
                </a>
            </li>
            <li class="nav-item"> 
                <a class="nav-link @Html.ActiveClass("Endeavors", "Supporters")" asp-controller="Endeavors" asp-action="Supporters" asp-route-slug="@Model.Slug"> 
                    Supporters 
                    <span class="badge bg-primary bg-opacity-10 text-primary small">250</span> 
                </a>
            </li>
            <li class="nav-item"> 
                <a class="nav-link @Html.ActiveClass("Endeavors", "Media")" asp-controller="Endeavors" asp-action="Media" asp-route-slug="@Model.Slug">
                    Media
                </a> 
            </li>
        </ul>
    </div>
</div>